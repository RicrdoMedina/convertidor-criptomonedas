<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title><%= htmlWebpackPlugin.options.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- <link rel="stylesheet" href="./dist/css/main.css"> -->
</head>
<body>
    <div class="wrapper">
        <section class="container">
          <h3 class="title">Cotizador de Criptomonedas</h3>
          <form id="formCriptomonedas" class="form-criptomonedas" action="">
            <div class="input-group">
              <label for="monedas">Monedas</label>
              <select name="" id="monedas" class="select">
                <option value="" selected>Seleccionar</option>
                <option value="">Dolar Estadounidense</option>
                <option value="">Peso Mexicano</option>
                <option value="">Libras</option>
                <option value="">Euros</option>
              </select>
            </div>
            <div class="input-group">
              <label for="criptomonedas">Criptomonedas</label>
              <select name="" id="criptomonedas" class="select">
                <option value="">Seleccionar</option>
                <option value="usd">Dolar Estadounidense</option>
                <option value="mxn">Peso Mexicano</option>
                <option value="gbp">Libras</option>
                <option value="eur">Euros</option>
              </select>
            </div>
            <div id="boxMessage" class="box-message">
            </div>
            <button type="submit" class="btn btn--primary">Cotizar</button>
          </form>
          <div class="result">
            <div class="box-loader">
            </div>
          </div>
        </section>
      </div>
  <!-- <script src="http://localhost:8080/js/bundle.js"></script> -->
  <!-- <script src="./dist/js/bundle.js"></script> -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css">
  <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</body>
</html>